@model IEnumerable<MarkomPos.Model.ViewModel.OfferValidationVm>

<section class="um-wrap">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="btn-create-wrap">
                    <a class="btn btn-default createValidation" href="javascript:void(0)">Create New</a>
                </div>
            </div>
            <div class="card-body">
                <table id="tblOfferValidation" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Offer.ContactName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserDiplayName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Note)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Offer.ContactName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserDiplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    <a class="editValidation" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-user-edit"></i></a> |
                                    <a class="detailValidation" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-eye"></i></a> |
                                    @Html.ActionLink(" ", "DeleteConfirmed", "OfferValidations", new { id = item.ID }, new { @class = "fa fa-trash", onclick = "return confirm('Are you sure you want to remove to list ?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<div id="dialogValidation">
</div>


<script>

    $(document).ready(function () {

        $('#tblOfferValidation thead tr').clone(true).appendTo('#tblOfferValidation thead');
        $('#tblOfferValidation thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();

            var length = $("tableValidation").find("tr:last td").length;
            if (i == length - 1) {
                return;
            }

            $(this).html('<input type="text" class="form-control text-box single-line"/>');

            $('input', this).on('keyup change', function () {
                if (tableValidation.column(i).search() !== this.value) {
                    tableValidation
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });


        var tableValidation = $('#tblOfferValidation').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            colReorder: true,
            orderCellsTop: true,
            fixedHeader: true,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
        });

        $(".detailValidation").click(function () {
            var $buttonClicked = $(this);
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/OfferValidations/Details?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialogValidation').html(data);
                    $('#detailsModal').modal(options);
                    $('#detailsModal').modal('show');
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });
        $(".createValidation").click(function () {
            var $buttonClicked = $(this);
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var ajaxCallURL = '/OfferValidations/Create';
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialogValidation').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });
        $(".editValidation").click(function () {
            var $buttonClicked = $(this);
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/OfferValidations/Edit?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialogValidation').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });

    });

    $(function () {

    });
</script>
