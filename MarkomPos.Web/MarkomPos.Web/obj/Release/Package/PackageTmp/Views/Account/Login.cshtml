@model MarkomPos.Model.ViewModel.LoginVm

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="login-wrapper">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MarkomPos | Log in</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/Content/CSS/all.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/adminlte.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/custom.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page dashboard">
    <div class="container">
        <div class="loginForm-wrap">
            <div class="loginForm-inner-wrap">

                @if (ViewBag.IsValid == false)
                {
                    <script type="text/javascript">
                        alert("Username or Password is invalid!");
                    </script>
                }
                <form method="post" action="@Url.Action("Authenticate", "Account")">
                    <div class="input-group mb-3">
                        <label>korisničko ime</label>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="input-group mb-3">
                        <label>zaporka</label>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Prijaviti se</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Content/JS/jquery.min.js"></script>
    <script src="~/Content/JS/bootstrap.bundle.min.js"></script>
    <script src="~/Content/JS/adminlte.min.js"></script>
</body>
</html>