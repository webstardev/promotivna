<script>
    $(function () {
        $("#btnSubmit").click(function () {
            if ($("#contactForm").valid()) {
                var contactCodeExistURL = '/Contacts/IsContactCodeExist';
                $.ajax({
                    type: "GET",
                    url: contactCodeExistURL,
                    contentType: "application/json; charset=utf-8",
                    datatype: "json",
                    success: function (data) {
                        if (data == false) {
                            alert("Please add code in code book")
                        }
                        else {
                            saveContact();
                        }
                    },
                    error: function () {
                        alert("Something failed.");
                    }
                });
            }
        });
    });

    function saveContact() {
        var data = $('#contactForm').serialize();
        var ajaxCallURL = '/Contacts/Create';
        $.ajax({
            type: "POST",
            url: ajaxCallURL,
            cache: false,
            data: data,
            success: function (data) {
                if (data) {
                    window.location.href = "/Contacts/Index";
                }
            },
            error: function () {
                alert("Content not saved.");
            }
        });
    }
</script>