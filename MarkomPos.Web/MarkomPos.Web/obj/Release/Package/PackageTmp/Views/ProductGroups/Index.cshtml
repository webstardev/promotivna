@model MarkomPos.Model.ViewModel.ProductGroupsListVm

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="um-wrap">
    <div class="container">
        <div class="card">
            @*<div class="card-header">
                    <div class="btn-create-wrap">
                        <a class="btn btn-default create" data-title="main" href="javascript:void(0)">Create Main</a>
                    </div>
                </div>*@
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 tblCustom">
                        <div class="row heading">
                            <div class="col-md-4"><label>Main Group</label></div>
                            <div class="col-md-8 createBtn"><a class="btn btn-default create" data-title="main" href="javascript:void(0)">Create</a></div>
                        </div>

                        <table id="tblProductGrpMain" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("DisplayName")
                                    </th>
                                    <th width="30%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MainGroup)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayName)
                                        </td>
                                        <td class="icons-list">
                                            <a class="edit" data-id="@item.ID" data-title="main" href="javascript:void(0)"><i class="fa fa-user-edit"></i></a> |
                                            <a class="details" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-eye"></i></a> |
                                            @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.ID }, new { @class = "fa fa-trash", onclick = "return confirm('Are you sure you want to remove " + @item.Name + " to list ?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-4 tblCustom">
                        <div class="row heading">
                            <div class="col-md-4"><label>Sub Group</label></div>
                            <div class="col-md-8 createBtn"><a class="btn btn-default create" data-title="sub" href="javascript:void(0)">Create</a></div>
                        </div>
                        <table id="tblProductGrpSub" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("DisplayName")
                                    </th>
                                    <th width="30%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SubGroup)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayName)
                                        </td>
                                        <td class="icons-list">
                                            <a class="edit" data-id="@item.ID" data-title="sub" href="javascript:void(0)"><i class="fa fa-user-edit"></i></a> |
                                            <a class="details" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-eye"></i></a> |
                                            @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.ID }, new { @class = "fa fa-trash", onclick = "return confirm('Are you sure you want to remove " + @item.Name + " to list ?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-4 tblCustom">
                        <div class="row heading">
                            <div class="col-md-4"><label>Basic Group</label></div>
                            <div class="col-md-8 createBtn"><a class="btn btn-default create" data-title="basic" href="javascript:void(0)">Create</a></div>
                        </div>
                        <table id="tblProductGrpBasic" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("DisplayName")
                                    </th>
                                    <th width="30%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.BasicGroup)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayName)
                                        </td>
                                        <td class="icons-list">
                                            <a class="edit" data-id="@item.ID" data-title="basic" href="javascript:void(0)"><i class="fa fa-user-edit"></i></a> |
                                            <a class="details" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-eye"></i></a> |
                                            @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.ID }, new { @class = "fa fa-trash", onclick = "return confirm('Are you sure you want to remove " + @item.Name + " to list ?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div id="dialog">
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

<script>
    $(document).ready(function () {

        //var groupColumn = 0;
        //$('#tblProductGrp thead tr:eq(0) th').each(function (i) {

        //    if ($(this).text().trim() == "Parent") {
        //        groupColumn = i;
        //    }
        //});

        $('#tblProductGrpMain thead tr').clone(true).appendTo('#tblProductGrpMain thead');
        $('#tblProductGrpMain thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();
            //var columnCount = $("#tblProductGrpMain th").length;
            var length = ($("#tblProductGrpMain tr th").length) / 2;
            if (i == length - 1) {
                return;
            }

            $(this).html('<input type="text" class="form-control text-box single-line"/>');

            $('input', this).on('keyup change', function () {
                if (tableMain.column(i).search() !== this.value) {
                    tableMain
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        $('#tblProductGrpSub thead tr').clone(true).appendTo('#tblProductGrpSub thead');
        $('#tblProductGrpSub thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();

            var length = ($("#tblProductGrpSub tr th").length) / 2;
            if (i == length - 1) {
                return;
            }

            $(this).html('<input type="text" class="form-control text-box single-line"/>');

            $('input', this).on('keyup change', function () {
                if (tableSub.column(i).search() !== this.value) {
                    tableSub
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        $('#tblProductGrpBasic thead tr').clone(true).appendTo('#tblProductGrpBasic thead');
        $('#tblProductGrpBasic thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();

            var length = ($("#tblProductGrpBasic tr th").length) / 2;
            if (i == length - 1) {
                return;
            }

            $(this).html('<input type="text" class="form-control text-box single-line"/>');

            $('input', this).on('keyup change', function () {
                if (tableBasic.column(i).search() !== this.value) {
                    tableBasic
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        var tableMain = $('#tblProductGrpMain').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            colReorder: true,
            orderCellsTop: true,
            fixedHeader: false,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
            //,
            //drawCallback: function (settings) {
            //    var api = this.api();
            //    var rows = api.rows({ page: 'current' }).nodes();
            //    var last = null;

            //    api.column(groupColumn, { page: 'current' }).data().each(function (group, i) {
            //        if (last !== group) {
            //            var length = $("table").find("tr:last td").length;
            //            $(rows).eq(i).before(
            //                '<tr class="group"><td colspan="' + length + '">' + group + '</td></tr>'
            //            );

            //            last = group;
            //        }
            //    });
            //}
        });
        var tableSub = $('#tblProductGrpSub').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            colReorder: true,
            orderCellsTop: true,
            fixedHeader: false,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
        });
        var tableBasic = $('#tblProductGrpBasic').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            colReorder: true,
            //orderCellsTop: true,
            fixedHeader: false,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
        });
    });

    $(function () {
        $(".details").click(function () {
            var $buttonClicked = $(this);
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/ProductGroups/Details?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialog').html(data);
                    $('#detailsModal').modal(options);
                    $('#detailsModal').modal('show');
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });
        $(".create").click(function () {
            var $buttonClicked = $(this);

            var title = $(this).attr("data-title");
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var ajaxCallURL = '/ProductGroups/Create?type=' + title;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialog').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                    if (title == "main") {
                        $(".parent").hide();
                    }
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });
        $(".edit").click(function () {
            var $buttonClicked = $(this);
            var title = $(this).attr("data-title");
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/ProductGroups/Edit?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialog').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                    if (title == "main") {
                        $(".parent").hide();
                    }
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });
    });
</script>
