@model IEnumerable<MarkomPos.Model.ViewModel.ProductGroupVm>

<table id="tblProductGrpBasic" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.DisplayName)
            </th>
            <th width="30%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td class="icons-list">
                    <a class="editBasic" data-id="@item.ID" data-title="basic" href="javascript:void(0)"><i class="fa fa-user-edit"></i></a> |
                    <a class="detailsBasic" data-id="@item.ID" href="javascript:void(0)"><i class="fa fa-eye"></i></a> |
                    @Html.ActionLink(" ", "DeleteConfirmed", new { id = item.ID }, new { @class = "fa fa-trash", onclick = "return confirm('Are you sure you want to remove " + @item.Name + " to list ?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {

        $('#tblProductGrpBasic thead tr').clone(true).appendTo('#tblProductGrpBasic thead');
        $('#tblProductGrpBasic thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();

            var length = ($("#tblProductGrpBasic tr th").length) / 2;
            if (i == length - 1) {
                return;
            }

            $(this).html('<input type="text" class="form-control text-box single-line"/>');

            $('input', this).on('keyup change', function () {
                if (tableBasic.column(i).search() !== this.value) {
                    tableBasic
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });

        var tableBasic = $('#tblProductGrpBasic').DataTable({
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
            colReorder: true,
            orderCellsTop: true,
            fixedHeader: false,
            columnDefs: [
                { orderable: false, targets: -1 }
            ]
        });

        $(".detailsBasic").click(function () {
            var $buttonClicked = $(this);
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/ProductGroups/Details?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialog').html(data);
                    $('#detailsModal').modal(options);
                    $('#detailsModal').modal('show');

                    $(".blankRow").hide();

                    var mainRows = $('#tblProductGrpMain > tbody > tr.selected');
                    if (mainRows.length > 0) {
                        var mainData = $('#tblProductGrpMain').dataTable().fnGetData(mainRows);
                        if (mainData != null) {
                            $('#mainGroup').val(parseInt(mainData.ID));
                        }
                    }
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });

        $(".editBasic").click(function () {
            var $buttonClicked = $(this);
            var title = $(this).attr("data-title");
            var options = {
                "backdrop": "static",
                keyboard: true
            };
            var id = $(this).attr("data-id");
            var ajaxCallURL = '/ProductGroups/Edit?id=' + id;
            $.ajax({
                type: "GET",
                url: ajaxCallURL,
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    $('#dialog').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');

                    if (title == "main") {
                        $(".parent").hide();
                    }
                    else if (title == "basic") {
                        $('#ParrentGroupId').attr('required', 'required');

                        var mainRows = $('#tblProductGrpMain > tbody > tr.selected');
                        if (mainRows.length > 0) {
                            var mainData = $('#tblProductGrpMain').dataTable().fnGetData(mainRows);
                            $('#mainGroup').val(parseInt(mainData.ID));

                            var ddlParrentGroup = $("#ParrentGroupId");
                            if (mainData.ID != undefined && mainData.ID > 0) {
                                $.ajax({
                                    url: "/ProductGroups/GetSelectedSubGroups",
                                    type: 'GET',
                                    async: false,
                                    cache: false,
                                    data: {
                                        id: mainData.ID
                                    },
                                    success: function (result) {
                                        if (result != null && result.length > 0) {
                                            ddlParrentGroup.empty().append('<option selected="selected">Select Group</option>');
                                            $.each(result, function () {
                                                ddlParrentGroup.append($("<option></option>").val(this['Value']).html(this['Text']));
                                            });
                                        }
                                    },
                                    error: function () {
                                        alert("error");
                                    }
                                });
                            }

                            var rows = $('#tblProductGrpSub > tbody > tr.selected');
                            if (rows.length > 0) {
                                var data = $('#tblProductGrpSub').dataTable().fnGetData(rows);
                                $('#ParrentGroupId').val(parseInt(data.ID));
                            }

                        }

                    }
                },
                error: function () {
                    alert("Content load failed.");
                }
            });
        });

    });

</script>
