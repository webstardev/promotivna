@model MarkomPos.Model.ViewModel.OfferVm

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content footerBg">
            <form method="post" action="@Url.Action("Create", "Offers")">
                @Html.AntiForgeryToken()
                <div class="modal-header txtColor">
                    <h4 class="modal-title">Offer</h4>
                    <button type="button" class="close txtColor" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body formBg">
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <!-- left column -->
                                <div class="col-md-12">
                                    @Html.HiddenFor(model => model.ID)
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ContactId, "ContactId", htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(m => m.ContactId, Model.Contacts, "Select Contact", htmlAttributes: new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.ContactId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.DeliveryTermId, "DeliveryTermId", htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(m => m.DeliveryTermId, Model.DeliveryTerms, "Select Delivery Term", htmlAttributes: new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.DeliveryTermId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.DocumentParityId, "DocumentParityId", htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(m => m.DocumentParityId, Model.DocumentParities, "Select Document Parity", htmlAttributes: new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.DocumentParityId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PaymentMethodId, "PaymentMethodId", htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(m => m.PaymentMethodId, Model.PaymentMethods, "Select Payment Method", htmlAttributes: new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.PaymentMethodId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ResponsibleUserId, "ResponsibleUserId", htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(m => m.ResponsibleUserId, Model.ResponsibleUsers, "Select Responsible User", htmlAttributes: new { @class = "form-control", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.ResponsibleUserId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.OfferDate, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.OfferDate, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.OfferDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.OfferNumber, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.OfferNumber, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.OfferNumber, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ExpirationDate, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.ExpirationDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ContactName, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                                    @Html.ValidationMessageFor(model => model.ContactName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ContactAddress, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.ContactAddress, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ContactAddress, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ContactCountry, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.ContactCountry, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ContactCountry, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="checkbox">
                                                        @Html.LabelFor(model => model.PrintNote, htmlAttributes: new { @class = "control-label" })
                                                        @Html.EditorFor(model => model.PrintNote)
                                                        @Html.ValidationMessageFor(model => model.PrintNote, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Note2, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Note2, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Note2, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer footerBg">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="~/Content/CSS/jquery-ui.css" rel="stylesheet" />
<script src="~/Content/JS/jquery-ui.js"></script>

<script>
    $(document).ready(function () {
        $("#OfferDate").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        }).datepicker("setDate", new Date());
        $("#ExpirationDate").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        }).datepicker("setDate", new Date());
    });
</script>